<h2>
  Our March recipes fresh selection</h2>


<% if (user) { %>
  <div>
    <a href="/">Index</a>
  </div>
  <% } %>


    <!-- Price -->
    <aside class="meal-price">
      <h2>Your Veggie Box</h2>
      <h3 id="htrois">
        <%=andrea.box%>
      </h3>

      <div class="priceglobalclass">
<span>Meals content: </span>
        <p id="quantityAnd"> 
        <%=andrea.quantity%>
      </p> 
   
      <b>Selected Meals:</b>
      <ul id="ulMeal">
        <% for(i=1;i<=andrea.quantity;i++){ %>
          <li>Meal
            <%= i %>:</li>
          <% } %>
      </ul>
      <p id="totalPrice">
        <strong>$TOTAL PRICE</strong>
      </p>
      <div class="totalpriceclass">
     <!-- <% var price %> -->
      <% if(andrea.box == "Single Box" && andrea.quantity == 3){%>
        <% price = "$ 225"%><p>$ 225</p>
        <% } else if(andrea.box == "Single Box" && andrea.quantity == 5){%>
          <% price = "$ 375"%><p> $ 375</p>
          <% } else if(andrea.box == "Single Box" && andrea.quantity == 7){%>
            <% price = "$ 525"%><p> $ 525</p>
            <% } else if(andrea.box == "Couple Box" && andrea.quantity == 3){%>
              <% price = "$ 375"%> <p> $ 375</p>
              <% } else if(andrea.box == "Couple Box" && andrea.quantity == 5){%>
                <% price = "$ 625"%> <p> $ 625</p>
                <% } else if(andrea.box == "Couple Box" && andrea.quantity == 7){%>
                  <% price = "$ 875"%> <p> $ 875</p>
                  <% } else if(andrea.box == "Family Box" && andrea.quantity == 3){%>
                    <% price = "$ 675"%><p> $ 675</p>
                    <% } else if(andrea.box == "Family Box" && andrea.quantity == 5){%>
                      <% price = "$ 1125"%> <p> $ 1125</p>
                      <% } else if(andrea.box == "Family Box" && andrea.quantity == 7){%>
                        <% price = "$ 1575"%><p> $ 1575</p>
                        <% } %>
                      </div>
                          <p>Ready ?</p>
                          <a href="/checkout?box=<%=andrea.box%>&quantity=<%=andrea.quantity%>&price=<%=price%>"> <button class="butt" type="submit">Place your order</button>  </a> 
    </aside>
  </div>
    <!-- End Price -->



    <div class="meal-container">

      <% meals.forEach(function(meal){%>
        <div class="card-select" data-cardSelect>
          <div class="meal">
            <img class="meal-img" style="border-radius: 5%;" src=<%=meal.image%> >
            <p id="meal-name">
              <%=meal.name%>
            </p>
            <p id="meal-description">
              <%=meal.description%>
            </p>

          </div>
          <button class="button" data-cardSelectButton></button>
        </div>
        <%})%>

    </div>



