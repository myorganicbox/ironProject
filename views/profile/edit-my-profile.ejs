
<h2>Edit my Profile</h2>


<% if (user) { %>
    <div>
      <a href="/">Index</a>
    </div>
  <% } %>

<!-- products/index.ejs -->

<h3>My previous orders:</h3>
<ul>
        <% baskets.forEach((basket) => { %>
          <li>
            <%= basket.name %> - <%= basket.quantity %> meals per week - $<%= basket.price %>
          </li>
        <%  }) %>
      </ul>


<form action="/profile/<%= user._id%> /edit-my-profile" method="POST" id="form-container">

    <% user.forEach((user) => { %>


    <label for="username">My current username</label>
    <input type="text" name="username" value="<%= user.username %>">

  <label for="newusername">My new Username</label>
  <input id="newusername" type="text" name="newusername" placeholder="new username">
  <br><br>
  
  <label for="email">My current email</label>
  <input type="text" name="email" value="<%= user.email %>">

  <label for="newemail">My new Email</label>
  <input id="newemail" type="text" name="newemail" placeholder="new email:">
  <br><br>

  
  <label for="address">My current Address</label>
  <input type="text" name="address" value="<%= user.address %>">

  <label for="newaddress">My new Address</label>
  <input id="newaddress" type="text" name="newaddress" placeholder="new address:">  
  <br><br>

  <%  }) %>

  <label for="newpassword">Change my Password</label>
  <input id="newpassword" type="password" name="newpassword" placeholder="new password:">
  <br><br>
  <label for="newpassword2">Confirm your Password</label>
  <input id="newpassword2" type="password" name="newpassword2" placeholder="password:">

  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>
  <br><br>

  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>